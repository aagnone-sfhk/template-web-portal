{
  "name": "Example Partner Portal",
  "description": "A example internal partner portal with Salesforce synchronization with Heroku Postgres",
  "keywords": ["next.js", "react", "typescript", "postgres", "ai", "heroku"],
  "website": "https://github.com/aagnone-sfhk/template-web-portal",
  "repository": "https://github.com/aagnone-sfhk/template-web-portal",
  "stack": "heroku-24",
  "buildpacks": [
    { "url": "heroku/nodejs" }
  ],
  "formation": {
    "web": {
      "quantity": 1,
      "size": "basic"
    }
  },
  "addons": [
    {
      "plan": "heroku-postgresql:standard-4"
    },
    {
      "plan": "heroku-inference:claude-4-5-sonnet"
    },
    {
      "plan": "papertrail:choklad"
    }
  ],
  "env": {
    "AUTH_USERNAME": {
      "description": "Username for portal authentication",
      "required": true
    },
    "AUTH_PASSWORD": {
      "description": "Password for portal authentication",
      "required": true
    },
    "NEXT_PUBLIC_APP_TITLE": {
      "description": "Application title displayed in header",
      "value": "Partner Portal"
    },
    "NEXT_PUBLIC_APP_DESCRIPTION": {
      "description": "Application description",
      "value": "A example internal partner portal with Salesforce synchronization with Heroku Postgres"
    },
    "NEXT_PUBLIC_APP_INTRO_MESSAGE": {
      "description": "Welcome message for AI chat",
      "value": "Hello! I'm your AI assistant. How can I help you today?"
    },
    "NEXT_PUBLIC_LOGO": {
      "description": "Path to logo image",
      "value": "/af.png"
    },
    "NEXT_PUBLIC_AVATAR": {
      "description": "Path to chat avatar image",
      "value": "/af.png"
    },
    "NEXT_PUBLIC_LOGO_ALT": {
      "description": "Alt text for logo image (accessibility)",
      "value": "Partner Portal"
    }
  }
}
